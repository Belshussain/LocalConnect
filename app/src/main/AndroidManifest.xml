<!-- app/src/main/AndroidManifest.xml -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.localconnect">

    <!-- Camera for QR scanning -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera.any" android:required="false" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar">

        <!-- Activities -->
        <activity android:name=".TransactionHistoryActivity" android:exported="false"/>
        <activity android:name=".QRScanActivity" />
        <activity android:name=".PaymentActivity" />
        <activity android:name=".DashboardAdminActivity" />
        <activity android:name=".DashboardSellerActivity" />
        <activity android:name=".DashboardCustomerActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />

        <!-- Profile Edit Activity -->
        <activity
            android:name=".ProfileEditActivity"
            android:exported="false"
            android:label="Edit Profile" />

        <!-- Main entry point -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

    </application>
</manifest>