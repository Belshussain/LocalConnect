<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/login_bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            app:tint="@color/white"/>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"/>

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update your personal information"
            android:textSize="14sp"
            android:textColor="#E0FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"/>

        <!-- Profile Form Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp"
                android:background="@color/white">

                <!-- Name Input -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/editName"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Enter your full name"
                    android:drawableStart="@android:drawable/ic_menu_edit"
                    android:drawablePadding="12dp"
                    android:padding="16dp"
                    android:background="@drawable/rounded_edittext"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="20dp"/>

                <!-- Email Display (Read-only) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/displayEmail"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="email@example.com"
                    android:drawableStart="@android:drawable/ic_dialog_email"
                    android:drawablePadding="12dp"
                    android:padding="16dp"
                    android:background="@drawable/rounded_edittext_disabled"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp"/>

                <!-- Phone Input -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/editPhone"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="0812345678"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:drawableStart="@android:drawable/ic_menu_call"
                    android:drawablePadding="12dp"
                    android:padding="16dp"
                    android:background="@drawable/rounded_edittext"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Must be exactly 10 digits"
                    android:textSize="12sp"
                    android:textColor="@color/text_hint"
                    android:layout_marginBottom="32dp"
                    android:layout_marginStart="4dp"/>

                <!-- Save Button -->
                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Save Changes"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/primary_blue"
                    android:elevation="4dp"
                    android:layout_marginBottom="12dp"/>

                <!-- Cancel Button -->
                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Cancel"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:background="@android:color/transparent"
                    style="?android:attr/borderlessButtonStyle"/>

                <TextView
                    android:id="@+id/customerCareLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Having trouble? Email Customer Care"
                    android:textSize="14sp"
                    android:textColor="@color/primary_blue"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>

